{
    "data": {
       "name": "orders_data_mapper",
       "description": "Will Map Data of opencart with POST API",
       "event_type": "data_mapping",
       "parameters": {
            "order_data": {
                "ref": "opencart.getOrders"
            }
        }
    },
    "mapping": {
        "conversion": {
            "type": ""
        },
        "properties": {
            "order": {
                "properties": {
                    "order_id": {
                      "ref": "order_id",
                      "operation": ""
                    },
                    "name": {
                      "ref": "buyer_name",
                      "operation": ""
                    },
                    "email": {
                      "ref": "buyer_email",
                      "operation": ""
                    },
                    "ordered": {
                      "ref": "date_ordered",
                      "operation": ""
                    },
                    "total_amount": {
                      "ref": "total",
                      "operation": ""
                    },
                    "payment_type": {
                      "ref": "payment/payment_method",
                      "operation": ""
                    },
                    "products": {
                      "loop_ref": "products",
                      "properties": {
                         "name": {
                            "ref": "name",
                            "operation": ""
                         },
                         "price": {
                            "ref": "price",
                            "operation": ""
                         },
                         "quantity": {
                            "ref": "quantity",
                            "operation": ""
                         },
                         "item_total": {
                            "ref": "item_total",
                            "operation": ""
                         }
                      }
                    }
                }
            }
        }
    },
    "outputs": {
        "success": {
            "properties": {
                "mapped_data": {
                    "ref": "mapping"
                }
            }
        },
        "error": {
            "properties": {
                "error_code": {
                   "ref": "error_code"
                },
                "error_message": {
                   "default_value": ""
                }
            }
        }
    }
}